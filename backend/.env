# Database Configuration
# Use SQLite for local development (automatically creates todo.db file)
# For production, use: DATABASE_URL=postgresql://user:password@host/database
DATABASE_URL=sqlite:///./todo.db

# Shared Secret for JWT Signing/Validation (must match frontend)
BETTER_AUTH_SECRET=yInlogff0nPS39jBBNwTAT8WfyWfBTJQ

# Note: When using SQLite, the database file will be created automatically in the backend directory
# The file path is relative to where you run the server from (backend/)

# Server Configuration
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# Environment
ENVIRONMENT=production
CORS_ORIGINS='*'  # Update with specific origin for production security

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Rate Limiting (Optional)
RATE_LIMIT_PER_MINUTE=100

# Database Pool Settings (Optional)
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=10
# DATABASE_POOL_PRE_PING=true

# Security Headers (Optional)
SECURITY_HEADERS=true

# Allowed Origins for CORS (production)
# CORS_ORIGINS='["https://yourdomain.com", "https://www.yourdomain.com"]'

# Health Check Settings
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5

# Feature Flags
ENABLE_METRICS=false
ENABLE_TRACING=false

# OpenAI API Key (for Phase 3 chatbot)
# OPENAI_API_KEY=your-openai-api-key-here

# MCP Server Configuration (for Phase 3)
# MCP_SERVER_URL=http://localhost:8001

# Chatbot Configuration
# CHAT_ENABLED=false

# Optional: Monitoring
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=production

# Optional: Analytics
# ANALYTICS_ID=

# For production deployment with PostgreSQL:
# DATABASE_URL=postgresql://user:password@your-neon-host/dbname
